         <div type="transcription">
            <p>
               <lb corresp="#a1"/>
               <gap reason="lost"/>
               <w>p<supplied>e</supplied>pekusai</w>
               <w>kektseñmeṃ</w>
               <w>ceno</w>
               <lb corresp="#a2"/>
               <gap reason="lost"/>
               <w>-nte</w>
               <w>istak</w>
               <w>astarya</w>
               <lb corresp="#a3"/>
