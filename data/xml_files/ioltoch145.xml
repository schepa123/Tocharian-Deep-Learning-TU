               </lg>
            </lg>
            <p><w>t<gap reason="plain" unit="part"/></w><w>k<gap reason="plain" unit="part"/></w><gap reason="lost"/>
<lb corresp="#b3"/><gap reason="lost"/><w>-ṅk</w><w>pälkāte</w><w>prentse</w><w>tot</w><w>i<milestone unit="w" type="break"/></w><gap reason="lost"/>
