                  <l n="d">
<lb corresp="#a1"/><gap reason="lost"/><w>lñ<gap reason="plain" unit="part"/></w><w>kausa</w><w>sū</w><gap reason="lost"/>
<lb corresp="#a2"/><gap reason="lost"/><w><gap reason="plain" unit="part"/>s<gap reason="plain" unit="part"/></w><w>waike</w><w>ceU</w><w>re<supplied>ki</supplied></w><gap reason="lost"/>
<lb corresp="#a3"/><gap reason="lost"/><w>yamasträ</w><num value="61">60-1</num></l>
               </lg>
