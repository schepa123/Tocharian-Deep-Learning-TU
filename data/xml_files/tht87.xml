            <p>
<lb corresp="#a1"/><gap reason="ink_lost"/>
<lb corresp="#a2"/><gap reason="ink_lost"/>
<lb corresp="#a3"/><gap reason="illegible"/>
<lb corresp="#a4"/><gap reason="plain" quantity="1"/><w><supplied>we</supplied>ṣṣäṃ</w><pc>॥</pc><gap reason="lost"/>
<lb corresp="#a5"/><w>ṣṣe</w><w>pärmaṅsa</w><gap reason="lost"/>
<lb corresp="#a6"/><gap reason="plain" quantity="1"/><w>ik<supplied>e</supplied>ne</w><pc>•</pc><w>klautk<supplied>a</supplied></w><gap reason="lost"/>
<lb corresp="#b1"/><w>ñke</w><w>mā</w><w>kallaṃ</w><pc>•</pc><w>tso<gap reason="plain" unit="part"/>e</w><gap reason="lost"/>
<lb corresp="#b2"/><w>brāhmaṇen<supplied>ts</supplied></w><gap reason="lost"/>
