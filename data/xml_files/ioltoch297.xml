<lb corresp="#a1"/><gap reason="plain" quantity="1"/><w>n<gap reason="plain" unit="part"/></w><gap reason="plain" quantity="1"/><w>ṣ</w><w>paṃ</w><w>ku</w><w><gap reason="plain" unit="part"/>n<gap reason="plain" unit="part"/></w><gap reason="lost"/>
<w><supplied>kā</supplied><lb corresp="#a2"/><supplied>ś</supplied>y<supplied>a</supplied>p</w><w>träṅkäṣ</w><w>kāsu</w><w>śä<milestone unit="w" type="break"/></w><gap reason="lost"/>
<lb corresp="#a3"/><w>ṣ<gap reason="plain" unit="part"/></w><w>koñ-ñäktes</w><w>maṇḍal</w><pc>•</pc><gap reason="lost"/>
<lb corresp="#b1"/><w>-ṣt</w><w>mañkät</w><w>nu</w><w>rohiṇiṃ</w><w>ṣokyo</w><gap reason="lost"/>
