<lb corresp="#a3"/><gap reason="lost"/><w><supplied>pä</supplied>lskosa</w><w>mā</w><gap reason="plain" quantity="1"/><gap reason="lost"/>
<lb corresp="#b1"/><gap reason="lost"/><w><supplied>sto</supplied>kaṃ</w><w>stokaṃ</w><w>k<supplied>ṣ</supplied>a<supplied>ṇe</supplied></w><gap reason="lost"/>
