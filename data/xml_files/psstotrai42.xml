            <p><milestone unit="passage" n="vv. 148-152"/>
<lb corresp="#a1"/><gap reason="lost"/><gap reason="lost"/><gap reason="lost"/><w>m</w><num value="140">100-40</num><gap reason="lost"/>
<lb corresp="#a2"/><gap reason="lost"/><gap reason="plain" quantity="1"/><gap reason="lost"/><gap reason="lost"/><gap reason="plain" quantity="9"/><gap reason="lost"/>
<lb corresp="#a3"/><gap reason="lost"/><pc>:</pc><num value="150">100-50</num><w>a</w><gap reason="lost"/><gap reason="lost"/><w>yam</w><w>a</w><gap reason="lost"/>
