         <div type="transcription">
            <p><milestone unit="passage" n="29.57b-30.6d"/>
<lb corresp="#a1"/><gap reason="lost"/><w>nesälñen<supplied>ts</supplied>e</w><gap reason="lost"/>
<lb corresp="#a2"/><gap reason="lost"/><gap reason="plain" quantity="1"/><num value="6">6</num><pc>॥</pc><w>yugavarga<supplied>ḥ</supplied></w><gap reason="lost"/>
<lb corresp="#a3"/><gap reason="lost"/><w>tänmasträ</w><pc>•</pc><w>duḥkh<supplied>aṃ</supplied></w><gap reason="lost"/>
<lb corresp="#a4"/><gap reason="lost"/><w><supplied>rerī</supplied>normeṃ</w><w>yukalñe</w><gap reason="lost"/>
<lb corresp="#a5"/><gap reason="lost"/><w><supplied>vairasaṃsargasaṃ</supplied>saktaḥ</w><w>sa<supplied>nuññe</supplied></w><gap reason="lost"/>
<lb corresp="#b1"/><gap reason="lost"/><w><supplied>a</supplied>ñmänts<supplied>e</supplied></w><w>s<supplied>ak</supplied>w</w><w>ñ<supplied>äṣṣeñca</supplied></w><gap reason="lost"/>
<lb corresp="#b2"/><gap reason="lost"/><gap reason="plain" quantity="1"/><w>yāmoṣäṃ</w><pc>•</pc><w>nai<supplied>naṃ</supplied></w><gap reason="lost"/>
