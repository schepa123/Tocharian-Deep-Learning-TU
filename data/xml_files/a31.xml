            <p>
<lb corresp="#a1"/><w>tsälp</w><w>mātār</w><w>sāmudraṃ</w><w>tāk</w><w>kā</w><gap reason="lost"/>
<w><supplied>śrā</supplied><lb corresp="#a2"/>vastyaṃ</w><w>śriṣṭhi</w><pc>:</pc><w>śrivṛddhi</w><w>tāk</w><gap reason="lost"/>
<lb corresp="#a3"/><w>yo</w><w>mar</w><w>cmolac</w><w>kāckäc</w><gap reason="lost"/>
<lb corresp="#a4"/><w>ysārṣinäs</w><pc>:</pc><w>ci</w><w>yäl</w><gap reason="lost"/>
<lb corresp="#a5"/><w>c</w><w>ymāṃ</w><w>cmolwaṃ</w><pc>:</pc><num value="2">2</num><w>pyāpy</w><w>oky</w><w>udu<supplied>mparṣi</supplied></w><gap reason="lost"/>
<w><supplied>waṣtä</supplied><lb corresp="#a6"/>ṣ</w><w>picäs</w><w>sne</w><w>waṣt</w><w>purāc</w><gap reason="lost"/>
<lb corresp="#b1"/><w>ne</w><pc>:</pc><w>tsälpāc</w><w>klopäṣ</w><w>kälpācä<supplied>r</supplied></w><gap reason="lost"/>
<w><supplied>tsopa</supplied><lb corresp="#b2"/>tsäṃ</w><w>mrosklune</w><w>yomrä</w><w>śāwaṃ</w><w>kā<supplied>ckentu</supplied></w><gap reason="lost"/>
<lb corresp="#b3"/><w>mroskäsmāṃ</w><w>tsälpäsmāṃ</w><gap reason="lost"/>
<lb corresp="#b4"/><w>maṃ</w><w>pyākäṣṣ</w><w>oki</w><w>koc</w><w>tä</w><gap reason="lost"/>
<lb corresp="#b5"/><w>räṣ</w><w>träṅkäṣ</w><pc>॥</pc><w>pañcagati<supplied>naṃ</supplied></w></p>
            <lg type="poem" met="frg:M21_21_18_13" subtype="hom">
               <lg n="1" type="strophe">
                  <l n="a"><gap reason="lost"/><supplied unit="syllable" quantity="21"/>
<lb corresp="#b6"/><pc>:</pc></l>
                  <l n="b"><w>kucne</w><w>ysār</w><w>wackwā</w><caesura ana="frg:cs-w"/><w>kapśiññä<supplied>ṣ</supplied></w><caesura ana="frg:cs-s"/><gap reason="lost"/><supplied unit="syllable" quantity="13"/></l>
               </lg>
            </lg>
