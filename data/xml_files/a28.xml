<lb corresp="#a3"/><gap reason="plain" quantity="5"/><w>m<gap reason="plain" unit="part"/></w><w>kä<gap reason="plain" unit="part"/>l<gap reason="plain" unit="part"/></w><gap reason="lost"/>
